<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:background="#ffffff"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/background2"
        android:layout_weight="0.05"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text  "
            android:id="@+id/fc_tv"
            android:layout_gravity="left|top"
            android:textColor="#004098"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  heart rate "
            android:id="@+id/text"
            android:textSize="20dp"
            android:layout_below="@+id/fc_tv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  time"
            android:id="@+id/textView4"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/text"
            android:layout_alignStart="@+id/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  hours"
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:layout_alignTop="@+id/fb_et2"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  bpm"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/fb_et"
            android:layout_toLeftOf="@+id/fa_btn"
            android:layout_toStartOf="@+id/fa_btn" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fb_et2"
            android:text="1"
            android:background="#ffffff"
            android:layout_alignTop="@+id/textView4"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/text"
            android:layout_toEndOf="@+id/text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fb_et"
            android:text="120"
            android:background="#FFFFFF"
            android:layout_below="@+id/fc_tv"
            android:layout_alignLeft="@+id/fb_et2"
            android:layout_alignStart="@+id/fb_et2"
            android:layout_alignRight="@+id/fb_et2"
            android:layout_alignEnd="@+id/fb_et2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="send"
            android:id="@+id/fa_btn"
            android:background="#FFFFFF"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:layout_below="@+id/textView6"
            android:layout_toRightOf="@+id/fc_tv"
            android:layout_toEndOf="@+id/fc_tv" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/past"
            android:visibility="invisible"
            android:layout_below="@+id/fa_btn"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />

    </RelativeLayout>

</LinearLayout>