<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:background="#ffffff"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/background2"
        android:layout_weight="0.05"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/fc_tv"
            android:layout_gravity="left|top"
            android:textColor="#004098"
            android:layout_alignBottom="@+id/editText"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age"
            android:id="@+id/text"
            android:layout_below="@+id/fc_tv"
            android:layout_toRightOf="@+id/editText"
            android:layout_toEndOf="@+id/editText"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weight"
            android:id="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/text"
            android:layout_alignStart="@+id/text"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sexuality"
            android:id="@+id/textView5"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginBottom="35dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kilogram"
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:layout_alignTop="@+id/fb_et2"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yearsOld"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:layout_alignTop="@+id/cal_value"
            android:layout_alignRight="@+id/fc_tv"
            android:layout_alignEnd="@+id/fc_tv" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male"
            android:id="@+id/radioButton"
            android:checked="true"
            android:layout_alignTop="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:layout_alignBottom="@+id/textView5" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female  "
            android:id="@+id/radioButton2"
            android:layout_alignTop="@+id/radioButton"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:checked="false"
            android:layout_alignBottom="@+id/radioButton" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fb_et2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView5"
            android:layout_alignRight="@+id/radioButton"
            android:layout_alignEnd="@+id/radioButton"
            android:text="52"
            android:background="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cal_value"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/fb_et2"
            android:layout_alignStart="@+id/fb_et2"
            android:layout_alignRight="@+id/fb_et2"
            android:layout_alignEnd="@+id/fb_et2"
            android:text="23"
            android:background="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send"
            android:id="@+id/button1"
            android:background="#FFFFFF"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:layout_alignTop="@+id/radioButton2"
            android:layout_toRightOf="@+id/radioButton2"
            android:layout_toEndOf="@+id/radioButton2"
            android:layout_alignBottom="@+id/radioButton2" />

    </RelativeLayout>

</LinearLayout>